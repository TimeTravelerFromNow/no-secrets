
  <div  id="<%= dom_id hacker %>" class="row d-flex justify-content-center">
    <div class="col col-md-9 col-lg-7 col-xl-6">
      <div class="card" style="width: 400px; border-radius: 15px;">
        <div class="card-body p-4">
          <div class="d-flex">
            <div class="flex-shrink-0">
              <% if hacker.portrait.present? %>
                <%= image_tag hacker.portrait, class:'img-fluid', style:'width: 180px; border-radius: 10px;' %>
              <% end %>
            </div>
            <div class="flex-grow-1 ms-3">
              <h5 class="mb-1"><%= hacker.name %></h5>
              <p class="mb-2 pb-1">Senior Journalist</p>

            </div>
          </div>
        </div>
      </div>
      <h4>keys:</h4>
      <div class="d-flex pt-1">

        <% hacker.saved_secrets.uniq.each do |saved_secret| %>
          <div class="card">
            <%= render saved_secret %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
